{% extends "@AnyContentBackend/anycontent-backend.html.twig" %}

{% block title %}{% if definition.Title %}{{ definition.Title }}{% else %}{{ definition.Name }}{% endif %} Listing{% endblock %}


{% block content %}

    {% block listing_header %}

        <div class="row">
            <ol class="breadcrumb">
                <li><a href="{{ path('anycontent_start') }}">Home</a></li>
                <li><a href="{{ links.repository }}">{% if repository.title %}{{ repository.title }}{% else %}{{ repository.name }}{% endif %}</a></li>
            </ol>
            <a href="{{ links.reset }}" title="{{ definition.name }}">
                <h2>
                    <small><span class="glyphicon glyphicon-file"></span>
                    </small>{% if definition.Title %}{{ definition.Title }}{% else %}{{ definition.Name }}{% endif %}
                </h2>
            </a>
            <br/>
        </div>

        {% if contentViews|length>1 %}

            <div class="row">

                <ul class="nav nav-tabs">

                    {% for contentView in contentViews %}
                        <li role="presentation" {% if contentView.active %}class="active"{% endif %}><a
                                    href="{{ contentView.url }}">{{ contentView.title }}</a></li>
                    {% endfor %}
                </ul>
                <br/>

            </div>
        {% endif %}
    {% endblock %}

    {% block listing_search %}
        <div class="row">
            {% include "@AnyContentBackend/Listing/listing-searchbox.html.twig" %}
        </div>
    {% endblock %}

    {% block listing_filter %}

    {% endblock %}

    <div class="row">
    {% block listing_content %}

    {% endblock %}
    </div>


    {% block listing_buttons %}
        <div class="row">
            <hr/>
            {{  buttons | raw }}
        </div>
    {% endblock %}

{% endblock %}