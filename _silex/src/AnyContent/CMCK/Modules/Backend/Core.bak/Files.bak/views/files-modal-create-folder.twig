<div class="modal fade" id="modal_files_create_folder">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" id="modal_files_form_create_folder" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Create Folder</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>New Folder</label>
                        <input type="text" class="form-control" name="create_folder_path"
                               value="{{ create_folder_path }}">
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="modal_files_button_create_folder">Create</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>