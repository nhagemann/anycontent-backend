{% extends "formelement-default.twig" %}

{% block input %}

    {% if type=='short' %}
        <div class="col-xs-2">
            <table style="width:100%">
                <tr>
                    <td><span class="glyphicon glyphicon-calendar"></span></td>
                    <td>
                        <select class="form-control input-sm col-xs-2" name="{{ name }}[]">
                            <option>Month</option>
                            {% for i in 1..12 %}
                                {% if i == month %}
                                    <option selected="selected">{{ "%02d"|format(i) }}</option>
                                {% else %}
                                    <option>{{ "%02d"|format(i) }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                    <td>-</td>
                    <td>
                        <select class="form-control input-sm col-xs-2" name="{{ name }}[]">
                            <option>Day</option>
                            {% for i in 1..31 %}
                                {% if i == day %}
                                    <option selected="selected">{{ "%02d"|format(i) }}</option>
                                {% else %}
                                    <option>{{ "%02d"|format(i) }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                </tr>
            </table>
        </div>


    {% else %}
        <div class="col-xs-2">
            <div class="input-group">

                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>

                <input type="text" class="form-control formelement-tooltip datepicker" id="{{ id }}" name="{{ name }}[]"
                       placeholder="{{ definition.placeholder }}" value="{{ value }}" data-toggle="tooltip"
                       data-trigger="hover" data-placement="right" data-content="{{ definition.hint }}" {% if definition.isProtected %} disabled="disabled"{% endif %}>
            </div>
        </div>



        {% if type=='datetime' or type=='full' %}


            {% if type=='full' %}
                <div class="col-xs-3">
            {% else %}
                <div class="col-xs-2">
            {% endif %}


            <table style="width:100%">
                <tr>
                    <td><span class="glyphicon glyphicon-time"></span></td>
                    <td>
                        <select class="form-control input-sm col-xs-2" name="{{ name }}[]">
                            <option>Hour</option>
                            {% for i in 0..23 %}

                                {% if i == hour %}

                                    <option selected="selected">{{ "%02d"|format(i) }}</option>
                                {% else %}
                                    <option>{{ "%02d"|format(i) }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                    <td>:</td>
                    <td>
                        <select class="form-control input-sm col-xs-2" name="{{ name }}[]">
                            <option value="">Minute</option>
                            {% for i in 0..59 %}
                                {% if i == minute %}
                                    <option selected="selected">{{ "%02d"|format(i) }}</option>
                                {% else %}
                                    <option>{{ "%02d"|format(i) }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                    {% if type=='full' %}
                        <td>:</td>
                        <td>
                            <select class="form-control input-sm col-xs-2" name="{{ name }}[]">
                                <option>Second</option>
                                {% for i in 0..59 %}
                                    {% if i == second %}
                                        <option selected="selected">{{ "%02d"|format(i) }}</option>
                                    {% else %}
                                        <option>{{ "%02d"|format(i) }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </td>
                    {% endif %}
                </tr>
            </table>
            </div>
        {% endif %}

    {% endif %}


{% endblock %}